generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  name     String
  email    String    @unique
  expenses Expense[]

  @@map("users")
}

model Expense {
  id        String  @id @default(uuid())
  name      String
  User      User?   @relation(fields: [userEmail], references: [email])
  userEmail String?

  @@map("expenses")
}

